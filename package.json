{
  "name": "timeapp",
  "version": "1.0.0",
  "description": "timeapp",
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "eslint": "eslint",
    "lint-fix": "eslint --fix .",
    "prettier": "prettier --single-quote --trailing-comma es5 --jsx-bracket-same-line"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "babel-runtime": "^6.23.0",
    "bcrypt": "^1.0.3",
    "meteor-node-stubs": "~0.2.0"
  },
  "devDependencies": {
    "@meteorjs/eslint-config-meteor": "^1.0.5",
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-prettier": "^2.2.0",
    "eslint-import-resolver-meteor": "^0.3.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^6.10.3",
    "prettier": "^1.4.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "meteor",
      "prettier"
    ],
    "extends": [
      "airbnb/base",
      "@meteorjs/eslint-config-meteor",
      "prettier"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5",
          "bracketSpacing": true,
          "jsxBracketSameLine": true
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qnipp/timeapp.git"
  },
  "author": "qnipp GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qnipp/timeapp/issues"
  },
  "homepage": "https://github.com/qnipp/timeapp#readme"
}
